extends layout

block content
  .container.clearfix-header
    h1 Login
    p Please login below
    form(method='post', action='/users/login',endtype='multipart/form-data')
      .form-group
        label Username
        input.form-control(name='username', type='text', placeholder='Enter Username')
      .form-group
        label Password
        input.form-control(name='password', type='password', placeholder='Enter Password')
      input.btn.btn-blue(name='submit', type='submit', value='Login')